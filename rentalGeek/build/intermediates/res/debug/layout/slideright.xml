<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddd9dfe0"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="10dp" >
    
    <TextView
        android:id="@+id/clear_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dip"
        android:textColor="#fff"
        android:text="Clear search"
         android:textSize="15sp" />
    

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="LOCATION"
         android:textSize="15sp" />

    <EditText
        android:id="@+id/edittextmaplocation"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:background="#ffffff"
        android:drawableLeft="@drawable/search_blue"
        android:drawablePadding="10dp"
        android:hint="Search Location"
        android:padding="5dp"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="MONTHLY RENT"
         android:textSize="15sp" />

    <TextView
        android:id="@+id/price_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="$ 0 "
        android:textColor="#4181cb"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true" >

        <SeekBar
            android:id="@+id/price_seek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="BEDROOM"
         android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bt_studio"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@color/blue"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:tag="#4181cb"
            android:text="Studio"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <Button
            android:id="@+id/bt_bedone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@color/blue"
            android:padding="3dp"
            android:tag="#4181cb"
            android:text="1"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <Button
            android:id="@+id/bt_bedtwo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@color/blue"
            android:padding="3dp"
            android:tag="#4181cb"
            android:text="2"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <Button
            android:id="@+id/bt_bedthree"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@color/blue"
            android:padding="3dp"
            android:tag="#4181cb"
            android:text="3"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <Button
            android:id="@+id/bt_bedfour"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@color/blue"
            android:padding="3dp"
            android:tag="#4181cb"
            android:text="4+"
            android:textColor="#ffffff"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="BATHROOM"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bt_bathone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@color/blue"
            android:padding="3dp"
            android:tag="#4181cb"
            android:text="1"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <Button
            android:id="@+id/bt_bathtwo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@color/blue"
            android:padding="3dp"
            android:tag="#4181cb"
            android:text="2"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <Button
            android:id="@+id/bt_baththree"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@color/blue"
            android:padding="3dp"
            android:tag="#4181cb"
            android:text="3"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <Button
            android:id="@+id/bt_bathfour"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@color/blue"
            android:padding="3dp"
            android:tag="#4181cb"
            android:text="4+"
            android:textColor="#ffffff"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:text="PETS"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/im_poocha"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/poocha" />

        <ImageView
            android:id="@+id/im_patti"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/patti" />
    </LinearLayout>

    <TextView
        android:id="@+id/search_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/apptheme_btn_default_holo_light"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="SEARCH"
        android:textColor="#ffffff"
        android:textSize="15sp" />

</LinearLayout><!-- From: file:/Users/travis/Documents/Android%20Projects/Entrision/RentalGeek/rentalGeek/src/main/res/layout/slideright.xml -->