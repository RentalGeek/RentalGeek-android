<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/slide_back_left"
    android:gravity="center"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dip" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/lockblack" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:layout_toRightOf="@+id/imageView1"
                    android:text="@string/pay_get_geek"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_margin="5dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_payment_label_nameoncard"
                        android:textColor="@color/blue"
                        android:layout_marginLeft="5dp" />

                    <EditText
                        android:id="@+id/editTextNameOnCard"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext_profile_field_height"
                        android:singleLine="true"
                        android:inputType="textCapWords"
                        android:background="@drawable/thin_border"
                        android:textCursorDrawable="@null"
                        android:padding="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_margin="5dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_payment_label_cardnumber"
                        android:textColor="@color/blue"
                        android:layout_marginLeft="5dp" />

                    <EditText
                        android:id="@+id/editTextCardNumber"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext_profile_field_height"
                        android:singleLine="true"
                        android:hint="####-####-####-####"
                        android:inputType="number"
                        android:maxLength="16"
                        android:background="@drawable/thin_border"
                        android:textCursorDrawable="@null"
                        android:padding="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp" >

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2" >

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:text="Expiration Date"
                            android:textColor="@color/blue" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp" >

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/thin_border"
                                android:layout_weight="1" >

                                <Spinner
                                    android:id="@+id/ed_mm"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/edittext_profile_field_height"
                                    android:entries="@array/months"
                                    android:hint="MM"
                                    android:inputType="number"
                                    android:maxLength="2"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:spinnerMode="dialog" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/thin_border"
                                android:layout_weight="1" >

                                <Spinner
                                    android:id="@+id/ed_yyyy"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/edittext_profile_field_height"
                                    android:entries="@array/years"
                                    android:hint="YYYY"
                                    android:maxLength="4"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:spinnerMode="dialog" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" >

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CVV"
                            android:textColor="@color/blue" />

                        <EditText
                            android:id="@+id/editTextCVV"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/edittext_profile_field_height"
                            android:layout_marginRight="10dp"
                            android:ems="10"
                            android:hint="321"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:maxLength="3"
                            android:background="@drawable/thin_border"
                            android:textCursorDrawable="@null"
                            android:padding="10dp"
                            android:layout_marginTop="10dp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:layout_marginTop="20dp"
                android:text="@string/pay_txt" />

            <Button
                android:id="@+id/verify_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="10dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="50dip"
                android:background="@drawable/apptheme_btn_default_holo_light"
                android:text="AGREE AND PAY $25.00"
                android:textColor="#ffffff" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
