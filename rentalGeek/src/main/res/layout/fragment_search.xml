<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/reset_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dip"
            android:textColor="@color/light_grey"
            android:text="Reset Search"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/monthly_rent_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Monthly Rent"
            android:textSize="15sp"
            android:textColor="@color/blue"/>

        <TextView
            android:id="@+id/rent_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="$0"
            android:textColor="@color/blue"
            android:textSize="15sp" />

        <SeekBar
            android:id="@+id/price_seek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="4000"
            android:progress="1"/>

        <TextView
            android:id="@+id/bedrooms_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Bedrooms"
            android:textSize="15sp"
            android:textColor="@color/blue"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal" >

            <com.rentalgeek.android.ui.view.SearchOptionButton
                android:id="@+id/btn_bed0"
                style="@style/SearchOptionButton"
                android:text="STUDIO"
                custom:value="0"/>

            <com.rentalgeek.android.ui.view.SearchOptionButton
                android:id="@+id/btn_bed1"
                style="@style/SearchOptionButton"
                android:text="1"
                custom:value="1"/>

            <com.rentalgeek.android.ui.view.SearchOptionButton
                android:id="@+id/btn_bed2"
                style="@style/SearchOptionButton"
                android:text="2"
                custom:value="2"/>

            <com.rentalgeek.android.ui.view.SearchOptionButton
                android:id="@+id/btn_bed3"
                style="@style/SearchOptionButton"
                android:text="3"
                custom:value="3"/>

            <com.rentalgeek.android.ui.view.SearchOptionButton
                android:id="@+id/btn_bed4"
                style="@style/SearchOptionButton"
                android:text="4+"
                custom:value="4"/>
        </LinearLayout>

        <TextView
            android:id="@+id/bathroom_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Bathrooms"
            android:textSize="15sp"
            android:textColor="@color/blue"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <com.rentalgeek.android.ui.view.SearchOptionButton
                android:id="@+id/btn_bath1"
                style="@style/SearchOptionButton"
                android:text="1"
                custom:value="1"/>

            <com.rentalgeek.android.ui.view.SearchOptionButton
                android:id="@+id/btn_bath2"
                style="@style/SearchOptionButton"
                android:text="2"
                custom:value="2"/>

            <com.rentalgeek.android.ui.view.SearchOptionButton
                android:id="@+id/btn_bath3"
                style="@style/SearchOptionButton"
                android:text="3"
                custom:value="3"/>

            <com.rentalgeek.android.ui.view.SearchOptionButton
                android:id="@+id/btn_bath4"
                style="@style/SearchOptionButton"
                android:text="4+"
                custom:value="4"/>

        </LinearLayout>

        <Button
            android:id="@+id/search_submit"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="75dp"
            android:background="@drawable/continue_bg"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="SEARCH"
            android:layout_gravity="center_horizontal"
            />

    </LinearLayout>

</ScrollView>
