        <TextView
            android:id="@+id/monthly_rent_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Monthly Rent"
            android:textSize="15sp"
            android:textColor="@color/blue"/>
        
        <TextView
            android:id="@+id/rent_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="$0"
            android:textColor="@color/blue"
            android:textSize="15sp" />

        <SeekBar
            android:id="@+id/price_seek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="4000"
            android:progress="1"/>
        
        <TextView
            android:id="@+id/bedrooms_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Bedrooms"
            android:textSize="15sp"
            android:textColor="@color/blue"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal" >

            <com.rentalgeek.android.ui.view.SearchOptionButton
                android:id="@+id/btn_bed0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingBottom="4dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:text="STUDIO"
                android:textSize="15sp"
                custom:value="0"
                custom:unselected_bg="@drawable/unselected_search_btn_bg"
                custom:selected_bg="@drawable/selected_search_btn_bg"
                custom:selected_txt_color="@color/white"
                custom:unselected_txt_color="@color/blue"/>
  
            <com.rentalgeek.android.ui.view.SearchOptionButton
                android:id="@+id/btn_bed1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:paddingBottom="4dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:text="1"
                android:textSize="15sp"
                custom:value="1"
                custom:unselected_bg="@drawable/unselected_search_btn_bg"
                custom:selected_bg="@drawable/selected_search_btn_bg"
                custom:selected_txt_color="@color/white"
                custom:unselected_txt_color="@color/blue"/>
 
            <com.rentalgeek.android.ui.view.SearchOptionButton
                android:id="@+id/btn_bed2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:paddingBottom="4dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:text="2"
                android:textSize="15sp"
                custom:value="2"
                custom:unselected_bg="@drawable/unselected_search_btn_bg"
                custom:selected_bg="@drawable/selected_search_btn_bg"
                custom:selected_txt_color="@color/white"
                custom:unselected_txt_color="@color/blue"/>
 
            <com.rentalgeek.android.ui.view.SearchOptionButton
                android:id="@+id/btn_bed3"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:paddingBottom="4dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:text="3"
                android:textSize="15sp"
                custom:value="3"
                custom:unselected_bg="@drawable/unselected_search_btn_bg"
                custom:selected_bg="@drawable/selected_search_btn_bg"
                custom:selected_txt_color="@color/white"
                custom:unselected_txt_color="@color/blue"/>

            <com.rentalgeek.android.ui.view.SearchOptionButton
                android:id="@+id/btn_bed4"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:paddingBottom="4dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:text="4+"
                android:textSize="15sp"
                custom:value="4"
                custom:unselected_bg="@drawable/unselected_search_btn_bg"
                custom:selected_bg="@drawable/selected_search_btn_bg"
                custom:selected_txt_color="@color/white"
                custom:unselected_txt_color="@color/blue"/>
        </LinearLayout>

        <TextView
            android:id="@+id/bathroom_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Bathroom"
            android:textSize="15sp"
            android:textColor="@color/blue"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        
        <com.rentalgeek.android.ui.view.SearchOptionButton
                android:id="@+id/btn_bath1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="1"
                android:textSize="15sp"
                android:paddingBottom="4dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                custom:value="1"
                custom:unselected_bg="@drawable/unselected_search_btn_bg"
                custom:selected_bg="@drawable/selected_search_btn_bg"
                custom:selected_txt_color="@color/white"
                custom:unselected_txt_color="@color/blue"/>
            
        <com.rentalgeek.android.ui.view.SearchOptionButton
                android:id="@+id/btn_bath2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="2"
                android:textSize="15sp"
                android:paddingBottom="4dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                custom:value="2"
                custom:unselected_bg="@drawable/unselected_search_btn_bg"
                custom:selected_bg="@drawable/selected_search_btn_bg"
                custom:selected_txt_color="@color/white"
                custom:unselected_txt_color="@color/blue"/>
            
        <com.rentalgeek.android.ui.view.SearchOptionButton
                android:id="@+id/btn_bath3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="3"
                android:textSize="15sp"
                android:paddingBottom="4dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                custom:value="3"
                custom:unselected_bg="@drawable/unselected_search_btn_bg"
                custom:selected_bg="@drawable/selected_search_btn_bg"
                custom:selected_txt_color="@color/white"
                custom:unselected_txt_color="@color/blue"/>

        <com.rentalgeek.android.ui.view.SearchOptionButton
                android:id="@+id/btn_bath4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="4"
                android:textSize="15sp"
                android:paddingBottom="4dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                custom:value="4"
                custom:unselected_bg="@drawable/unselected_search_btn_bg"
                custom:selected_bg="@drawable/selected_search_btn_bg"
                custom:selected_txt_color="@color/white"
                custom:unselected_txt_color="@color/blue"/>
 
        </LinearLayout>

        <TextView
            android:id="@+id/search_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/apptheme_btn_default_holo_light"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="SEARCH"
            android:textColor="@color/white"
            android:textSize="15sp" />
</LinearLayout>
