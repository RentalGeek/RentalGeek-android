<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/background_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:background="@drawable/tutorial_geekscore_bg">

    <ImageView
        android:layout_width="@dimen/loho_wid"
        android:layout_height="@dimen/loho_hei"
        android:src="@drawable/simple_logo"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/transparent_black"
        android:padding="20dp"
        android:gravity="center">

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="@string/geek_score_tm"
            android:textColor="@color/white"
            android:textSize="35sp"/>

        <TextView
            android:id="@+id/first_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:text="Get it done for $25!\nYour GeekScore is all you\nneed to apply to your first,\nsecond and even third\nchoices."/>

        <TextView
            android:id="@+id/second_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:text="It's your info so keep it\nsecure in one app!"/>

    </LinearLayout>

</LinearLayout>
