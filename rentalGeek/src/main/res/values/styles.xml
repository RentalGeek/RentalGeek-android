<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.



    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.



        -->

        <item name="android:datePickerStyle">@style/MyDatePicker</item>
        <item name="android:alertDialogStyle">@style/GeekDialog</item>
    </style>

    <style name="GeekDialog" parent="android:Theme.Dialog">
        <!--         <item name="android:buttonStyle">@style/CargoButton</item>
        <item name="android:windowBackground">@drawable/cargo_dialog_background</item>
        <item name="android:textColor">@color/cargodialog_primary_text</item>
        <item name="android:windowTitleStyle">@style/CargoDialogWindowTitle</item> -->
    </style>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="CustomActionBarTheme"
        parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/blue</item>

        <!-- Support library compatibility -->
        <item name="background">@color/blue</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="MyDialogInner" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:windowBackground">@drawable/transgrey</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="MyDialog" parent="@android:style/Theme.DeviceDefault.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="MyDialognew" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="MyDatePicker" parent="@android:style/Widget.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>
</resources>