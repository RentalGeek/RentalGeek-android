<resources>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorAccent">@color/blue</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:datePickerStyle">@style/GeekDatePicker</item>
        <item name="android:alertDialogStyle">@style/GeekDialog</item>
        <item name="android:spinnerItemStyle">@style/GeekSpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItem.DropDownItem</item>

    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">


    </style>

    <style name="SpinnerItem.DropDownItem" parent="@android:style/Widget.DropDownItem.Spinner">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="GeekSpinnerItem" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">#000000</item>
        <!--<item name="android:textAppearance">@style/GeekTextAppearanceSpinnerItem</item>-->
    </style>
    <style name="GeekTextAppearanceSpinnerItem" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="GeekFormTheme" parent="AppTheme">
        <item name="android:editTextStyle">@style/GeekFormEditTextStyle</item>
        <item name="editTextStyle">@style/GeekFormEditTextStyle</item>
        <item name="windowActionBar">false</item>
        <!--<item name="spinnerItemStyle">@style/AppSpinnerItem</item>-->
    </style>

    <style name="GeekFormEditTextStyle" parent="@android:style/Widget.EditText">
        <!--<item name="android:background">@drawable/filled_roundededges_box_dark</item>-->
        <item name="android:textColor">#000000</item>
        <!--<item name="android:layout_height">45dip</item>-->
    </style>

    <style name="GeekDialog" parent="android:Theme.Dialog">
    </style>

    <style name="HomeActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="CustomActionBarTheme"
        parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/GeekActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/GeekActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="GeekActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/blue</item>
        <!-- Support library compatibility -->
        <item name="background">@color/blue</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="Widget.GeekApp.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/blue</item>
        <item name="theme">@style/ThemeOverlay.MyApp.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="ThemeOverlay.MyApp.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
    </style>


    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="MyDialogInner" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:windowBackground">@drawable/transgrey</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="MyDialog" parent="@android:style/Theme.DeviceDefault.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="MyDialognew" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="GeekDatePicker" parent="@android:style/Widget.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>

    <item type="id" name="segment_no"/>
    <item type="id" name="segment_yes"/>

    <style name="Segment" parent="RadioButton">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="NoSegment" parent="Segment">
        <item name="android:id">@id/segment_no</item>
        <item name="android:text">No</item>
    </style>

    <style name="YesSegment" parent="Segment">
        <item name="android:id">@id/segment_yes</item>
        <item name="android:text">Yes</item>
    </style>

    <style name="SearchOptionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:paddingLeft">13dp</item>
        <item name="android:paddingRight">13dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="unselected_bg">@drawable/unselected_search_btn_bg</item>
        <item name="selected_bg">@drawable/selected_search_btn_bg</item>
        <item name="selected_txt_color">@color/white</item>
        <item name="unselected_txt_color">@color/blue</item>
    </style>

    <!--<com.rentalgeek.android.ui.view.SearchOptionButton-->
        <!--custom:value="0"-->
        <!--custom:unselected_bg="@drawable/unselected_search_btn_bg"-->
        <!--custom:selected_bg="@drawable/selected_search_btn_bg"-->
        <!--custom:selected_txt_color="@color/white"-->
        <!--custom:unselected_txt_color="@color/blue"/>-->
    
</resources>
